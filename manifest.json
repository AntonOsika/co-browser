{
  "manifest_version": 3,
  "name": "ChatCanvas Extension",
  "version": "1.0",
  "description": "Open ChatCanvas with Cmd+Shift+K",
  "action": {
    "default_popup": "chromeextension.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+J",
        "mac": "Command+J"
      },
      "description": "Open ChatCanvas"
    }
  }
}
